{
  "rules": {
    "messages": {
      "$conversationId": {
        ".read": true,
        ".write": true,
        "$messageId": {
          ".read": true,
          ".write": true
        }
      }
    },
    "conversations": {
      ".read": true,
      ".write": true,
      "$conversationId": {
        ".read": true,
        ".write": true,
        "participants": {
          "$userId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "typing": {
      "$conversationId": {
        ".read": true,
        ".write": true,
        "$userId": {
          ".read": true,
          ".write": true
        }
      }
    },
    "status": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "chats": {
      "$chatId": {
        ".read": true,
        ".write": true,
        "messages": {
          "$messageId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "user_conversations": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId"
      }
    },
    "groups": {
      "$groupId": {
        ".read": "auth != null && 
                 (root.child('groups').child($groupId).child('members').hasChild(auth.uid) || 
                  root.child('groups').child($groupId).child('isPublic').val() === true)",
                  
        ".write": "auth != null && 
                  (!data.exists() || 
                   data.child('creatorId').val() === auth.uid || 
                   data.child('admins').hasChild(auth.uid))",
        
        "messages": {
          ".read": "auth != null && 
                   root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
                  
          ".write": "auth != null && 
                    root.child('groups').child($groupId).child('members').hasChild(auth.uid) &&
                    (!data.parent().child('settings').child('moderation').child('adminOnlyMessages').val() || 
                     root.child('groups').child($groupId).child('admins').hasChild(auth.uid))",
                     
          "$messageId": {
            ".write": "auth != null && 
                      (data.child('senderId').val() === auth.uid || 
                       root.child('groups').child($groupId).child('admins').hasChild(auth.uid))",
                       
            ".validate": "newData.hasChildren(['content', 'senderId', 'timestamp'])"
          }
        },
        
        "typing": {
          "$userId": {
            ".write": "auth != null && $userId === auth.uid",
            ".validate": "newData.hasChildren(['isTyping', 'timestamp'])"
          }
        }
      }
    },
    
    "userGroups": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".indexOn": ["updatedAt"]
      }
    },
    
    ".read": "auth != null",
    ".write": "auth != null"
  }
}
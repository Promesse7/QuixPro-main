{
  "rules": {
    "messages": {
      "$conversationId": {
        ".read": true,
        ".write": true,
        "$messageId": {
          ".read": true,
          ".write": true
        }
      }
    },
    
    "conversations": {
      ".read": true,
      ".write": true,
      "$conversationId": {
        ".read": true,
        ".write": true,
        "participants": {
          "$userId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    
    "typing": {
      "$conversationId": {
        ".read": true,
        ".write": true,
        "$userId": {
          ".read": true,
          ".write": true
        }
      }
    },
    
    "status": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    
    "chats": {
      "$chatId": {
        ".read": true,
        ".write": true,
        "messages": {
          "$messageId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    
    "user_conversations": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },

    "groups": {
      "$groupId": {
        ".read": "auth != null && (data.child('members').hasChild(auth.uid) || data.child('isPublic').val() === true)",
        ".write": "auth != null && (!data.exists() || data.child('creatorId').val() === auth.uid || data.child('admins').hasChild(auth.uid))",
        
        "members": {
          "$userId": {
            ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
            ".write": "auth != null && (auth.uid === $userId || root.child('groups').child($groupId).child('admins').hasChild(auth.uid))"
          }
        },
        
        "admins": {
          "$userId": {
            ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
            ".write": "auth != null && root.child('groups').child($groupId).child('admins').hasChild(auth.uid)"
          }
        },
        
        "messages": {
          ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
          ".write": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
          
          "$messageId": {
            ".validate": "newData.hasChildren(['senderId', 'content', 'timestamp']) && newData.child('senderId').val() === auth.uid"
          }
        },
        
        "typing": {
          "$userId": {
            ".write": "auth != null && auth.uid === $userId"
          }
        }
      }
    },
    
    "userGroups": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId",
        ".indexOn": ["updatedAt"]
      }
    },
    
    ".read": false,
    ".write": false
  }
}

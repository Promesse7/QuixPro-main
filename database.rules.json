{
  "rules": {
    ".read": false,
    ".write": false,

    "chats": {
      "$chatId": {
        ".read": true,
        ".write": true,
        "messages": {
          "$messageId": {
            ".read": true,
            ".write": true,
            ".validate": "newData.hasChildren(['senderId', 'recipientId', 'content', 'type', 'createdAt', 'read']) && newData.child('content').isString() && newData.child('content').val().length > 0"
          }
        }
      }
    },

    "status": {
      "$userId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['state', 'last_seen']) && newData.child('state').isString() && (newData.child('state').val() === 'online' || newData.child('state').val() === 'offline')"
      }
    },

    "groups": {
      "$groupId": {
        ".read": "auth != null && data.child('members').hasChild(auth.uid)",

        "members": {
          "$uid": {
            ".write": "auth != null && $uid === auth.uid"
          }
        },

        "meta": {
          ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)"
        }
      }
    },

    "messages": {
      "$groupId": {
        ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
        ".write": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",

        "$messageId": {
          ".validate": "newData.hasChildren(['senderId', 'content', 'createdAt', 'type']) && newData.child('senderId').val() === auth.uid && newData.child('content').isString() && newData.child('content').val().length > 0 && newData.child('type').val().matches(/^(text|image|file|math)$/)"
        }
      }
    },

    "typingIndicators": {
      "$groupId": {
        ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",

        "$uid": {
          ".write": "auth != null && $uid === auth.uid && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
          ".validate": "newData.hasChildren(['isTyping', 'updatedAt']) && newData.child('isTyping').isBoolean() && newData.child('updatedAt').isNumber()"
        }
      }
    },

    "readReceipts": {
      "$groupId": {
        "$messageId": {
          "$uid": {
            ".write": "auth != null && $uid === auth.uid && root.child('groups').child($groupId).child('members').hasChild(auth.uid)"
          }
        }
      }
    }
  }
}
